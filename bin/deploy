#!/usr/bin/env sh

set -e

if [ -z "$1" ]; then
  echo "Specify an environment (staging|production)"
else
  heroku config:set BUILDPACK_URL="https://github.com/HashNuke/heroku-buildpack-elixir.git" --app sumofus-constable-api-$1
  git push $1 master; heroku run mix ecto.migrate --app sumofus-constable-api-$1
fi
